@model UsuarioModel
<!-- Search Beer -->
<div class="jumbotron jumbotron-fluid">
    <h1 class="text-center">
        Pesquise a reputação da cerveja realizada pelos maiores <span class="h1">alcoólatras</span> do Brasil!</h1><br>
        <div class="input-group col-md-4" style="text-align:center; margin: 0 auto;">
            <input type="text" class="form-control" placeholder="Digite a cerveja desejada!">
            <div class="input-group-btn">
                <span class="btn btn-success">Buscar</span>
            </div>
        </div>
</div>
<!-- Search Beer -->
<!-- Cards Organize -->
<div class="container">
    @TempData["NomeUsuarioLogado"]
    @TempData["MensagemLoginInvalido"]
    <div class="card">
        <div class="card-body" style="text-align:center; margin: auto;">
            <div class="row">
                <div class="col-sm-4 col-md-3 col-lg-3">
                    <div class="card">
                        <img class="card-img-top img-responsive" src="~/images/brahma-logo.png" alt="Card image" width="197px" height="166px">
                        <div class="card-body">
                            <h4 class="card-title">
                                Brahma</h4>
                            <p class="card-text">Brahma é uma marca de cerveja brasileira criada...</p>
                                <a href="#" class="btn btn-primary">Ver mais</a>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4 col-md-3 col-lg-3">
                    <div class="card">
                        <img class="card-img-top" src="~/images/heineken-logo.png" alt="Card image" width="197px" height="166px">
                        <div class="card-body">
                            <h4 class="card-title">
                                Heineken</h4>
                            <p class="card-text">Heineken Larger Beer, ou simplesmente Heineken...</p>
                                <a href="#" class="btn btn-primary">Ver mais</a>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4 col-md-3 col-lg-3">
                    <div class="card">
                        <img class="card-img-top" src="~/images/stellaartois-logo.png" alt="Card image" width="197px" height="166px">
                        <div class="card-body">
                            <h4 class="card-title">
                                Stella Artois</h4>
                            <p class="card-text">A Stella Artois é uma cerveja pilsen lager...</p>
                                <a href="#" class="btn btn-primary">Ver mais</a>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4 col-md-3 col-lg-3">
                    <div class="card">
                        <img class="card-img-top" src="~/images/itaipava-logo.png" alt="Card image" width="197px" height="166px">
                        <div class="card-body">
                            <h4 class="card-title">
                                Itaipava</h4>
                            <p class="card-text">Itaipava é uma cerveja brasileira fabricada...</p>
                                <a href="#" class="btn btn-primary">Ver mais</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Cards Organize -->
