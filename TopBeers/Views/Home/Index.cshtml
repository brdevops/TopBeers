@using Microsoft.AspNetCore.Mvc.Rendering
@model TopBeers.Models.CervejaModel
@{
    ViewData["Title"] = "Home";
}



<!-- Search Beer -->
<div class="jumbotron jumbotron-fluid">
    <div class="form-group">
        <h2 class="text-center">
            Pesquise por cervejas, e saiba sua reputação feita pelos maiores alcoólatras do mundo!
        </h2>
    </div>
    <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
        @using (Html.BeginForm("BuscarCerveja", "Cerveja", FormMethod.Post))
                {
            <div class="form-row">
                <div class="col-12 col-md-9 mb-2 mb-md-0">
                    <input id="busca" name="busca" class="form-control form-control-lg" placeholder="Busque a cerveja desejada">
                </div>
                <div class="col-12 col-md-3">
                    <button  class="btn btn-block btn-lg btn-success">Buscar</button>
                </div>
            </div>
          }
    </div>
</div>
<!-- Search Beer style="max-width: 20rem;" -->

<div class="container">
    <div class="card">
        <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs">
                <li class="nav-item">
                    <a class="nav-link active" href="#">Top 10 </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Mais visualizadas</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link disabled" href="#">Mais avaliadas</a>
                </li>
            </ul>
        </div>
        <div class="card-body">
            <div class="row">
                
                @foreach (var cerveja in Model.ListaCervejas)
                {
                    <div class="col-md-3">
                        <div class="card mb-4 shadow-sm">
                            <div class="text-center">
                                <img class="img-fluid" src="~/cervejas/@cerveja.Foto" alt="Card image">
                            </div>
                            <div class="card-body">
                                <h3 class="card-title text-center">@cerveja.NomeCerveja</h3>
                                <p class="card-text">@cerveja.Historia</p>
                                <div class="d-flex justify-content-between align-items-center">

                                    <small class="text-muted">Nota: 9,8</small>
                                    <small class="text-muted">Teor: @cerveja.GrauAlcoolico</small>
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-sm btn-outline-secondary">@Html.ActionLink("Avaliar", "Avaliar", "Cerveja", new { idCerveja = @cerveja.Id })</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>

</div>







