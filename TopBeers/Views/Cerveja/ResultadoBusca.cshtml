@model TopBeers.Models.CervejaModel
@{
    ViewData["Title"] = "Resultado Busca";
}


<div class="container">
    <h1>Resultado da busca por: @Model.Busca</h1>
    <p>Aproximadamente @Model.ListaCervejas.Count() resultados obtidos</p>
    <div class="">
        <div class="">
            <div class="row">
                @foreach (var cerveja in Model.ListaCervejas)
                {
                    <div class="col-md-3">
                        <div class="card mb-4 shadow-sm">
                            <div class="text-center">
                                <img class="img-fluid" src="~/cervejas/@cerveja.Foto" alt="Card image">
                            </div>
                            <div class="card-body">
                                <h3 class="card-title text-center">@cerveja.NomeCerveja</h3>
                                <p class="card-text">@cerveja.Historia</p>
                                <div class="d-flex justify-content-between align-items-center">

                                    <small class="text-muted">Nota: 9,8</small>
                                    <small class="text-muted">Teor: @cerveja.GrauAlcoolico</small>
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-sm btn-outline-secondary">@Html.ActionLink("Avaliar", "Avaliar", "Cerveja", new {idCerveja = @cerveja.Id})</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>

</div>


