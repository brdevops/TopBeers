@using TopBeers.Util
@using TopBeers.Util.Helper
@model TopBeers.Models.CervejaModel
@{
    ViewBag.Title = "Cerveja";
    Layout = "~/Views/Shared/_Layout.cshtml";
}





<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div align="center">
                <img class="img-thumbnail" src="~/images/brahma-logo.png" width="318px" height="1166px">
            </div>
        </div>
        <div class="col-md-8 float-left>
            <div class="row">
                <div class="col-md">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">Cerveja: </th>
                                <th scope="col" colspan="5">@Model.NomeCerveja</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">Tipo</th>
                                <td colspan="3">Pilsen</td>
                                <td class="font-weight-bold">@Model.Amargor</td>
                                <td colspan="2">Leve</td>
                            </tr>
                            <tr>
                                <th scope="row">Origem</th>
                                <td colspan="3">@Model.Origem</td>
                                <td class="font-weight-bold">Aroma</td>
                                <td colspan="2">@Model.Aroma</td>
                            </tr>
                            <tr>
                                <th scope="row">Teor Alcoólico</th>
                                <td colspan="3">@Model.GrauAlcoolico</td>
                                <td class="font-weight-bold">Coloração </td>
                                <td colspan="2">@Model.Coloracao</td>
                            </tr>
                            <tr>
                                <th scope="row">Cervejaria</th>
                                <td colspan="6">@ControllerHelper.ObterCervejariaPorId(@Model.IdCervejaria)</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
        <hr />
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-9">
            <h3>História</h3>
            <p>
                @Model.Historia
            </p>
        </div>
        <div class="col-md-3">
            <h3>Mais informações</h3>
            <ul class="list-unstyled">
                <li>
                    <b>Sugestão de Harmonização:</b>
                    <ul>
                        <li>Carnes Vermelhas</li>
                        <li>Feijoada</li>
                        <li>Hummus</li>
                    </ul>
                </li>
            </ul>
        </div>
        <hr />
    </div>

</div>



<div class="container">

    <div class="container">
        <form>
            <div class="form-group text-center col-12">
                <h4>Avalie</h4>
                <form method="post" action="#" enctype="multipart/form-data">
                    <div class="estrelas">
                        <input type="radio" id="vazio" name="estrela" value="" checked>

                        <label for="estrela_um"><i class="fa"></i></label>
                        <input type="radio" id="estrela_um" name="estrela" value="1">

                        <label for="estrela_dois"><i class="fa"></i></label>
                        <input type="radio" id="estrela_dois" name="estrela" value="2">

                        <label for="estrela_tres"><i class="fa"></i></label>
                        <input type="radio" id="estrela_tres" name="estrela" value="3">

                        <label for="estrela_quatro"><i class="fa"></i></label>
                        <input type="radio" id="estrela_quatro" name="estrela" value="4">

                        <label for="estrela_cinco"><i class="fa"></i></label>
                        <input type="radio" id="estrela_cinco" name="estrela" value="5">

                        <br><br>
                        <div class="form-group col-12 col-form-label">
                            <label>Comentário:</label>
                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="5"></textarea>
                        </div>

                        <div class="form-group">
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary col-12 col-form-label">Enviar</button>
                            </div>
                        </div>
                    </div>
                </form>
</div>


 
        </form>
    </div>

    <hr />

    <div class="row">
        <div class="col-sm-5">
            <div class="text-center">
                <h4>Classificação media</h4>
                <h2 class="bold ">4.3 <small>/ 5</small></h2>
                <span class="fa fa-star" aria-hidden="true"></span>

                <span class="fa fa-star" aria-hidden="true"></span>
                <span class="fa fa-star" aria-hidden="true"></span>
                <span class="fa fa-star" aria-hidden="true"></span>
                <span class="fa fa-star" aria-hidden="true"></span>
            </div>
        </div>
        <div class="col-sm-5 text-center">
            <h4>Avaliações</h4>
            <span class="fa fa-star float-right" aria-hidden="true"></span>
            <div class="progress">
                <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">75%</div>
            </div>
            <br />
            <div class="progress">
                <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 10%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100">10%</div>
            </div>
            <br />
            <div class="progress">
                <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 10%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100">10%</div>
            </div>
            <br />
            <div class="progress">
                <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 5%" aria-valuenow="" aria-valuemin="0" aria-valuemax="100">5%</div>
            </div>
            <br />
            <div class="progress">
                <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 5%" aria-valuenow="" aria-valuemin="0" aria-valuemax="100">5%</div>
            </div>
        </div>
    </div>

    <hr />

    <div class="row">
        <div class="col-sm-12">
            <hr />
            <div class="review-block">
                <div class="row">
                    <div class="col-sm-3">
                        <img src="~/images/victor-user.png" class="img-rounded" width="60px" height="60px">
                        <div class="review-block-name"><a href="#">Victor Cauper</a></div>
                        <div class="review-block-date">25/08/2018</div>
                    </div>
                    <div class="col-sm-9">
                        <div class="review-block-rate">
                            <span class="fa fa-star" aria-hidden="true"></span>
                            <span class="fa fa-star" aria-hidden="true"></span>
                            <span class="fa fa-star" aria-hidden="true"></span>
                            <span class="fa fa-star" aria-hidden="true"></span>
                            <span class="fa fa-star" aria-hidden="true"></span>
                        </div>
                        <div class="review-block-title">Cerveja excelente!</div>
                        <div class="review-block-description">Ótimo custo benefício, além de um sabor superior as demais do mercado com o mesmo preco!</div>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-sm-3">
                        <img src="~/images/bruno-user.png" class="img-rounded width="60px" height="60px">
                        <div class="review-block-name"><a href="#">Bruno Costa</a></div>
                        <div class="review-block-date">25/08/2018</div>
                    </div>
                    <div class="col-sm-9">
                        <div class="review-block-rate">
                            <span class="fa fa-star" aria-hidden="true"></span>
                            <span class="fa fa-star" aria-hidden="true"></span>
                            <span class="fa fa-star" aria-hidden="true"></span>
                            <span class="fa fa-star" aria-hidden="true"></span>
                            <span class="fa fa-star" aria-hidden="true"></span>
                        </div>
                        <div class="review-block-title">Sabor divino!!!!</div>
                        <div class="review-block-description">Foram os Deuses Gregos que inventaram esse sabor!</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>








